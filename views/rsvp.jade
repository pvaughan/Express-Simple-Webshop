extends layout
block content
    .container
        .content

            .page-header
                h1= title
                .row
                    .span6
                        .form_box
                            form(class="activate-code-form form-horizontal",action="#")
                                fieldset

                                legend Stap 1 - Activeer je uitnodiging
                                .control-group
                                    label(class="control-label") Code uitnodiging :
                                    .controls
                                        input( id="lbl_code", name="code", type="text", placeholder="XYXY1234", class="input-large", required="Code verplicht")
                                        p(class="help-block") Voer je unieke code in
                                .control-group(id="acticateControl")
                                    label(class="control-label")
                                    .controls
                                        button(id="btnSend", name="btnSend", class="btn btn-purple") Verstuur
                    .span6.pull-right
                        img(width= "100%", alt="360x270",class="thumbnail", src="images/svenfles.jpg")

                    .span6
                        #guestFrom
                    .span6.pull-right
                        #confirm


block script
    script(defer, src='/node_modules/handlebars/dist/handlebars.js')
    script(defer, src='/js/templates.js')
    script(defer, src='/js/view-rsvp.js')



